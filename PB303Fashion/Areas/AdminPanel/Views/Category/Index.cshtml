@model List<Category>
@{
    var categoryModel = Model ?? new List<Category> { };
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Image Url
                            </th>
                            <th>
                               Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in categoryModel)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                   @item.ImageUrl
                                </td>
                                <td>
                                    <a class="btn btn-warning">Update</a>
                                    <a class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }   
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>